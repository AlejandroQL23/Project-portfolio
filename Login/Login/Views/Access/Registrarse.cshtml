@model Login.ViewModels.UserVM;
<html>

    <head>
        <title>
            Registro
        </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>

    <body>

        <div class="row mt-5 justifi-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                <div class="card-body">
                    <form asp-controller="Access" asp-action="Registrarse" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Nombre completo" required asp-for="FullName" />
                        <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Email" />
                        <input class="form-control mb-3" type="text" placeholder="Contrasenna" required asp-for="Password" />
                        <input class="form-control mb-3" type="text" placeholder="Confirmar Contrasenna" required asp-for="rePassword" />

                        <div>
                            <button class="btn btn-primary" type="submit">Crear</button>
                        </div>

                        @if(ViewData["Mensaje"] != null){
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        Ya tienes cuenta? <a asp-controller="" asp-action="">Iniciar</a>
                    </form>
                </div>
                </div>

            </div>
        </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>